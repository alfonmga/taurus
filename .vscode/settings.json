{
  "search.exclude": {
    "**/node_modules": true,
    ".yarn": true
  },
  "markdownlint.config": {
    "MD003": { "style": "setext" },
    "MD004": {
      "style": "asterisk"
    },
    "MD033": false
  },
  "eslint.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "typescript.preferences.importModuleSpecifier": "non-relative"
}
